#!/bin/bash

paths=()

[ -f Gemfile ]      && paths=( "${paths[@]}" $( find "$PWD/.bundle" -type d -name gems ) )
[ -f package.json ] && paths=( "${paths[@]}" "$PWD/node_modules" --ignore node_modules )
[ -d vim/bundle ]   && paths=( "${paths[@]}" "$PWD/vim/bundle"  )
[ -d .vim/bundle ]  && paths=( "${paths[@]}" "$PWD/.vim/bundle" )

[ ${#paths} -eq 0 ] && paths=( "$PWD" )

if [ "$1" = "--path" ]; then
  echo "${paths[0]}"
elif [ "$1" = "--paths" ]; then
  echo "${paths[@]}"
else
  rg "$@" "${paths[@]}"
fi
