#!/bin/bash

if [ "${1:0:1}" = "@" ]; then
  profile="$1"
  shift

  case "$profile" in
    @log)
      mux -S "$@" shore log;;
    @guard)
      mux -b -V "$@" shore -e bundle exec guard;;
    @server)
      mux -b "$@" shore -t server -v guard;;
    @pry)
      mux -V "$@" shore -e pry;;
    @console)
      if [ -f Gemfile ]; then
        command="bundle exec spring rails console"
      elif [ -f Gruntfile.js ]; then
        command="node"
      else
        echo "Can't find console for project."
        exit 1
      fi

      mux -V "$@" shore -e "$command";;
    @dev)
      mux @server
      [ -f Guardfile ] && mux @guard
      ;;
    *)
      echo "Unknown profile $profile."
      exit 1
      ;;
  esac

  exit
fi

command='new-window'
unset args background

while [ "${1:0:1}" = "-" ]; do
  case "$1" in
    -S)
      command='split-window'
      args="$args -v -l 20"
      ;;
    -V)
      command='split-window'
      if [ `tput cols` -ge 160 ]; then
        args="$args -h -l 80"
      else
        args="$args -v -l 20"
      fi
      ;;
    -b)
      background=1
      ;;
    -s)
      command='split-window'
      args="$args -v"
      ;;
    -v)
      command='split-window'
      args="$args -h"
      ;;
    -c|-l|-p)
      args="$args $1 $2"
      shift
      ;;
    *)
      echo "Usage: $0 [-b] [-c|-s|-v] [-l size|-p percentage] [COMMAND..]"
      exit 255
      ;;
  esac

  shift
done

if [ $# -eq 0 ]; then
  set --
  set -- bash --login
fi

tmux $command $args -- "tmux setenv TMUXPWD_\$(tmux display -p '#D' | tr -d %) \"$PWD\"; $*"

if [ "$background" ]; then
  if [ "$command" = "new-window" ]; then
    tmux last-window
  else
    tmux last-pane
  fi
fi
