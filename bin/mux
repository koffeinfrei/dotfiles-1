#!/bin/bash

if [ "${1:0:1}" = "@" ]; then
  profile="$1"
  shift

  case "$profile" in
    @log)
      mux -s -l 20 "$@" shore log;;
    @guard)
      mux -b -v -l 80 "$@" shore -e bundle exec guard;;
    @server)
      mux -b "$@" shore -t server -v guard;;
    @pry)
      mux -v -l 80 "$@" shore -e pry;;
    @console)
      mux -v -l 80 "$@" shore -e bundle exec spring rails console;;
    @dev)
      mux @server
      mux @guard
      exec sensible-vim
      ;;
    *)
      echo "Unknown profile $profile."
      exit 1
      ;;
  esac

  exit
fi

command='new-window'
unset args background

while [ "${1:0:1}" = "-" ]; do
  case "$1" in
    -b)
      background=1
      ;;
    -s)
      command='split-window'
      args="$args -v"
      ;;
    -v)
      command='split-window'
      args="$args -h"
      ;;
    -c|-l|-p)
      args="$args $1 $2"
      shift
      ;;
    *)
      echo "Usage: $0 [-b] [-c|-s|-v] [-l size|-p percentage] [COMMAND..]"
  esac

  shift
done

if [ $# -eq 0 ]; then
  set --
  set -- bash --login
fi

tmux $command $args -- "tmux setenv TMUXPWD_\$(tmux display -p '#D' | tr -d %) \"$PWD\"; $*"

if [ "$background" ]; then
  if [ "$command" = "new-window" ]; then
    tmux last-window
  else
    tmux last-pane
  fi
fi
