  " lsp {{{
  if index(g:pathogen_disabled, 'lsp') == -1
    let g:lsp_diagnostics_enabled = 0

    if executable('solargraph')
      au User lsp_setup call lsp#register_server({
        \ 'name': 'ruby',
        \ 'cmd': { server_info -> ['solargraph', 'stdio'] },
        \ 'whitelist': ['ruby']
      \ })
    endif

    if executable('typescript-language-server')
      " https://github.com/ryanolsonx/vim-lsp-typescript
      au User lsp_setup call lsp#register_server({
        \ 'name': 'typescript',
        \ 'cmd': {server_info->[&shell, &shellcmdflag, 'typescript-language-server --stdio']},
        \ 'root_uri': {server_info->lsp#utils#path_to_uri(lsp#utils#find_nearest_parent_file_directory(lsp#utils#get_buffer_path(), 'tsconfig.json'))},
        \ 'whitelist': ['typescript', 'typescript.tsx'],
      \ })

      " https://github.com/ryanolsonx/vim-lsp-javascript
      au User lsp_setup call lsp#register_server({
        \ 'name': 'javascript',
        \ 'cmd': {server_info->[&shell, &shellcmdflag, 'typescript-language-server --stdio']},
        \ 'root_uri': {server_info->lsp#utils#path_to_uri(lsp#utils#find_nearest_parent_file_directory(lsp#utils#get_buffer_path(), 'package.json'))},
        \ 'whitelist': ['javascript', 'javascript.jsx'],
      \ })
    endif
  endif
  " }}}

  " deoplete {{{
  if index(g:pathogen_disabled, 'deoplete') == -1
    let g:deoplete#enable_at_startup = 1

    " <Tab> - trigger and accept completion
    inoremap <silent><expr> <Tab>
      \ pumvisible() ? "\<C-y>" :
      \ <SID>check_back_space() ? "\<Tab>" :
      \ deoplete#mappings#manual_complete()

    function! s:check_back_space() abort
      let col = col('.') - 1
      return !col || getline('.')[col - 1]  =~ '\s'
    endfunction

    " <CR> - reject completion and close popup
    inoremap <CR> <C-r>=(pumvisible() ? "<C-e>" : "")<CR><C-g>u<CR>
  endif
  " }}}

  " coc {{{
  if index(g:pathogen_disabled, 'coc') == -1
    let g:coc_global_extensions = [
